<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.otherscreen.activity.AdminPortal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/modio" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimens/twenty_dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="@dimens/twenty_dp"
            android:background="@drawable/search_box_bg">

            <EditText
                android:id="@+id/orderId_editText"
                android:layout_width="match_parent"
                android:layout_height="@dimens/fifty_dp"
                android:backgroundTint="@color/lightred"
                android:hint="Enter the Order id"
                android:padding="5pt" />

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="@dimens/thirty_five_dp"
                android:layout_height="@dimens/thirty_five_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"
                android:src="@drawable/scanner" />

        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search_new"
            android:layout_width="@dimens/hundred_fifty_dp"
            android:layout_height="@dimens/width_zero_dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimens/ten_dp"
            android:background="@drawable/adminbackground"
            android:elevation="@dimens/five_dp"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimens/eighteen_sp" />

        <ScrollView
            android:id="@+id/articleDetails_admin_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimens/ten_dp"
                    android:fontFamily="@font/fredoka"
                    android:text="Article Details"
                    android:textColor="@color/red"
                    android:textSize="@dimens/eighteen_sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimens/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="Order ID"
                        android:textSize="@dimens/sixteen_sp" />

                    <TextView
                        android:id="@+id/orderId_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="To Country:"
                        android:textColor="@color/blue"
                        android:textSize="@dimens/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimens/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="To Country:"
                        android:textSize="@dimens/sixteen_sp" />

                    <TextView
                        android:id="@+id/toCountry_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="To Country:"
                        android:textColor="@color/blue"
                        android:textSize="@dimens/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimens/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="Product Type:"
                        android:textSize="@dimens/sixteen_sp" />

                    <TextView
                        android:id="@+id/productType_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text=""
                        android:textColor="@color/blue"
                        android:textSize="@dimens/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimens/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="No. of Types of Item:"
                        android:textSize="@dimens/sixteen_sp" />

                    <TextView
                        android:id="@+id/no_of_types_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text=""
                        android:textColor="@color/blue"
                        android:textSize="@dimens/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimens/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="Item Category:"
                        android:textSize="@dimens/sixteen_sp" />

                    <TextView
                        android:id="@+id/itemCategory_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text=""
                        android:textColor="@color/blue"
                        android:textSize="@dimens/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimens/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="In Case of Non Delivery:"
                        android:textSize="@dimens/sixteen_sp" />

                    <TextView
                        android:id="@+id/non_delivery_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text=""
                        android:textColor="@color/blue"
                        android:textSize="@dimens/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimens/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="Total Weight: "
                        android:textSize="@dimens/sixteen_sp" />

                    <TextView
                        android:id="@+id/totalWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text=""
                        android:textColor="@color/blue"
                        android:textSize="@dimens/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimens/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="Payment Status: "
                        android:textSize="@dimens/sixteen_sp" />

                    <TextView
                        android:id="@+id/paymentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimens/twenty_dp"
                        android:fontFamily="@font/fredoka"
                        android:text="Success"
                        android:textColor="#2c6e49"
                        android:textSize="@dimens/sixteen_sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <Spinner
                    android:id="@+id/selectLevel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimens/forty_dp"
                    android:layout_marginStart="@dimens/twenty_dp"
                    android:layout_marginEnd="@dimens/twenty_dp"
                    android:layout_marginBottom="@dimens/ten_dp"
                    android:background="@drawable/edit_text_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/reject"
                        android:layout_width="@dimens/width_zero_dp"
                        android:layout_height="@dimens/forty_dp"
                        android:layout_margin="@dimens/ten_dp"
                        android:layout_weight="1"
                        android:background="@drawable/reject_btn"
                        android:fontFamily="@font/fredoka"
                        android:text="Reject"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/approve"
                        android:layout_width="@dimens/width_zero_dp"
                        android:layout_height="@dimens/forty_dp"
                        android:layout_margin="@dimens/ten_dp"
                        android:layout_weight="1"
                        android:background="@drawable/approve_btn"
                        android:fontFamily="@font/fredoka"
                        android:text="Approve"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>