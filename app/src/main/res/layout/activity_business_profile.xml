<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.otherscreen.activity.BusinessProfile">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimens/fifty_dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimens/fifty_dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/head_EP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimens/ten_dp"
                android:layout_marginTop="@dimens/ten_dp"
                android:layout_marginEnd="@dimens/ten_dp"
                android:layout_marginBottom="@dimens/ten_dp"
                android:fontFamily="@font/fredoka"
                android:text="Business Profile"
                android:textColor="@color/red"
                android:textSize="@dimens/eighteen_sp" />
            <TextView
                android:id="@+id/save_businessProfile"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimens/ten_dp"
                android:layout_marginTop="@dimens/ten_dp"
                android:layout_marginEnd="@dimens/ten_dp"
                android:layout_marginBottom="@dimens/ten_dp"
                android:fontFamily="@font/fredoka"
                android:text="Save"
                android:textColor="@color/skyblue"
                android:textSize="@dimens/eighteen_sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:layout_width="@dimens/hundred_dp"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textColor="@color/black"
                android:layout_marginStart="@dimens/ten_dp" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimens/ten_dp"
                android:layout_margin="@dimens/five_dp"
                app:cardElevation="@dimens/ten_dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimens/fifty_dp"
                android:layout_margin="@dimens/ten_dp"
                android:background="@color/material_dynamic_neutral90"
                android:autofillHints="auto"
                android:textSize="@dimens/fourteen_sp"
                android:padding="@dimens/five_dp" />
            </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="@dimens/hundred_dp"
        android:layout_height="wrap_content"
        android:text="AD code"
        android:textColor="@color/black"
        android:layout_marginStart="@dimens/ten_dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimens/ten_dp"
        android:layout_margin="@dimens/five_dp"
        app:cardElevation="@dimens/ten_dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimens/fifty_dp"
            android:layout_margin="@dimens/ten_dp"
            android:background="@color/material_dynamic_neutral90"
            android:autofillHints="auto"
            android:textSize="@dimens/fourteen_sp"
            android:padding="@dimens/five_dp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="@dimens/hundred_dp"
        android:layout_height="wrap_content"
        android:text="GSTIN"
        android:textColor="@color/black"
        android:layout_marginStart="@dimens/ten_dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimens/ten_dp"
        android:layout_margin="@dimens/five_dp"
        app:cardElevation="@dimens/ten_dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimens/fifty_dp"
            android:layout_margin="@dimens/ten_dp"
            android:background="@color/material_dynamic_neutral90"
            android:autofillHints="auto"
            android:textSize="@dimens/fourteen_sp"
            android:padding="@dimens/five_dp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="@dimens/hundred_dp"
        android:layout_height="wrap_content"
        android:text="IEC No."
        android:textColor="@color/black"
        android:layout_marginStart="@dimens/ten_dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimens/ten_dp"
        android:layout_margin="@dimens/five_dp"
        app:cardElevation="@dimens/ten_dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimens/fifty_dp"
            android:layout_margin="@dimens/ten_dp"
            android:background="@color/material_dynamic_neutral90"
            android:autofillHints="auto"
            android:textSize="@dimens/fourteen_sp"
            android:padding="@dimens/five_dp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="@dimens/hundred_dp"
        android:layout_height="wrap_content"
        android:text="LUT"
        android:textColor="@color/black"
        android:layout_marginStart="@dimens/ten_dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimens/ten_dp"
        android:layout_margin="@dimens/five_dp"
        app:cardElevation="@dimens/ten_dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimens/fifty_dp"
            android:layout_margin="@dimens/ten_dp"
            android:background="@color/material_dynamic_neutral90"
            android:autofillHints="auto"
            android:textSize="@dimens/fourteen_sp"
            android:padding="@dimens/five_dp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="@dimens/hundred_dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="@color/black"
        android:layout_marginStart="@dimens/ten_dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimens/ten_dp"
        android:layout_margin="@dimens/five_dp"
        app:cardElevation="@dimens/ten_dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="@dimens/ten_dp"
            android:background="@color/material_dynamic_neutral90"
            android:autofillHints="auto"
            android:textSize="@dimens/fourteen_sp"
            android:padding="@dimens/five_dp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>