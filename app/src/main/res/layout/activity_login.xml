<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.otherscreen.activity.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimens/ten_dp"
        android:background="@drawable/background_bg"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimens/hundred_forty_dp"
            android:layout_marginTop="@dimens/fifteen_dp"
            android:layout_marginEnd="@dimens/ten_dp"
            android:text="dg-Niryat"
            android:textColor="@color/red"
            android:textSize="@dimens/forty_dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimens/hundred_forty_dp"
            android:layout_marginTop="@dimens/seventy_three_dp"
            android:layout_marginEnd="@dimens/ten_dp"
            android:text="Local Goes Global"
            android:textColor="@color/red"
            android:textSize="@dimens/twenty_dp" />

        <ImageView
            android:layout_width="@dimens/hundred_twenty_dp"
            android:layout_height="@dimens/ninety_dp"
            android:layout_marginStart="@dimens/ten_dp"
            android:layout_marginTop="@dimens/ten_dp"
            android:src="@drawable/dnk2"
            android:layout_marginEnd="@dimens/ten_dp"
            android:layout_marginBottom="@dimens/ten_dp"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimens/forty_dp"
            android:layout_marginTop="@dimens/forty_dp"
            android:layout_marginEnd="@dimens/ten_dp"
            android:text="Welcome! User "
            android:textColor="@color/red"
            android:textSize="@dimens/thirty_dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mail_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimens/fifty_dp"
            android:layout_margin="@dimens/twenty_dp"
            android:background="@drawable/button_bg"
            android:hint="Email"
            android:padding="@dimens/ten_dp"
            android:textColor="@color/red" />

        <EditText
            android:id="@+id/password_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimens/fifty_dp"
            android:layout_marginStart="@dimens/twenty_dp"
            android:layout_marginEnd="@dimens/twenty_dp"
            android:background="@drawable/button_bg"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="@dimens/five_dp"
            android:textColor="@color/red" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimens/fifty_dp"
            android:layout_gravity="end"
            android:layout_margin="@dimens/twenty_dp"
            android:background="@drawable/signinbutton_bg"
            android:elevation="@dimens/five_dp"
            android:text="LogIn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimens/eighteen_sp" />

        <TextView
            android:id="@+id/forget_password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:layout_marginStart="@dimens/twenty_dp"
            android:text="Forget password"
            android:textColor="@color/red"
            android:textSize="@dimens/sixteen_sp" />

        <TextView
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimens/hundred_dp"
            android:layout_marginTop="@dimens/ten_dp"
            android:text="Create Account"
            android:textColor="@color/red"
            android:textSize="@dimens/thirty_sp"
            android:textStyle="bold" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="@dimens/width_zero_dp"
               android:layout_height="@dimens/two_hundred_dp"
               android:layout_weight="1"
               android:src="@drawable/amrit" />

           <ImageView
               android:layout_width="@dimens/width_zero_dp"
               android:layout_height="@dimens/two_hundred_dp"
               android:layout_weight="1"
               android:layout_marginBottom="@dimens/one_dp"
               android:src="@drawable/india" />


       </LinearLayout>



    </LinearLayout>


</LinearLayout>