<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.verification">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:text="dg-Niryat"
            android:textColor="@color/red"
            android:textSize="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:text="Local Goes Global"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-80dp"
            android:src="@drawable/dnk2"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            />
    </com.google.android.material.appbar.AppBarLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="19dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="87dp"
                android:src="@drawable/mail"
                android:layout_marginTop="45dp"
               android:layout_marginStart="139.5dp"
                />
            <TextView
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="-115dp"
                android:text="Verify  Email"
                android:textSize="30sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="282dp"
                android:text="Please check your email for a verification link, use it to verify your account, and then click the REFRESH button."
                android:textSize="15dp"
                android:textColor="@color/skyblue"
                android:textStyle="italic"/>


  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/refresh_email"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:text="Verify"
       android:background="@drawable/buttonrefresh_bg"
      android:layout_gravity="center"
      android:layout_marginTop="150dp" />

        </androidx.cardview.widget.CardView>



</LinearLayout>