<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.otherscreen.activity.verification">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:text="dg-Niryat"
            android:textColor="@color/red"
            android:textSize="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:text="Local Goes Global"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-80dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/dnk2" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="19dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="87dp"
            android:layout_marginStart="139.5dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/mail" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="-115dp"
            android:text="Verify  Email"
            android:textColor="@color/red"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="282dp"
            android:gravity="center"
            android:text="Please check your email for a verification link, use it to verify your account, and then click the REFRESH button."
            android:textAlignment="center"
            android:textColor="@color/skyblue"
            android:textSize="15dp"
            android:textStyle="italic" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/refresh_email"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/buttonrefresh_bg"
            android:text="Verify" />

    </androidx.cardview.widget.CardView>


</LinearLayout>