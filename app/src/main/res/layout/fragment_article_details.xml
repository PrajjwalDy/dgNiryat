<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.otherscreen.fragments.ArticleDetails.ArticleDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimens/fifty_dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/appBar_text_book_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimens/ten_dp"
                android:text="Article Details"
                android:fontFamily="@font/fredoka"
                android:textColor="@color/red"
                android:textSize="@dimens/twenty_sp" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/articleName_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArticleName"
        android:layout_margin="@dimens/twenty_dp"
        android:fontFamily="@font/fredoka"
        android:textSize="@dimens/eighteen_sp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/orderNo_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Order No."
        android:textSize="@dimens/sixteen_sp"
        android:fontFamily="@font/fredoka"
        android:layout_marginStart="@dimens/twenty_dp"/>


    <ImageView
        android:id="@+id/barcodeImage"
        android:layout_width="match_parent"
        android:layout_height="@dimens/hundred_fifty_dp"
        android:layout_margin="@dimens/twenty_dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimens/twenty_dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimens/sixteen_sp"
            android:fontFamily="@font/fredoka"
            android:layout_marginStart="@dimens/twenty_dp"
            android:text="To Country:"/>

        <TextView
            android:id="@+id/toCountry_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimens/sixteen_sp"
            android:layout_marginStart="@dimens/twenty_dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/fredoka"
            android:text="To Country:"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimens/twenty_dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimens/sixteen_sp"
            android:layout_marginStart="@dimens/twenty_dp"
            android:fontFamily="@font/fredoka"
            android:text="Product Type:"/>

        <TextView
            android:id="@+id/productType_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimens/sixteen_sp"
            android:layout_marginStart="@dimens/twenty_dp"
            android:fontFamily="@font/fredoka"
            android:textColor="@color/blue"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimens/twenty_dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimens/sixteen_sp"
            android:fontFamily="@font/fredoka"
            android:layout_marginStart="@dimens/twenty_dp"
            android:text="No. of Types of Item:"/>

        <TextView
            android:id="@+id/no_of_types_detils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimens/sixteen_sp"
            android:fontFamily="@font/fredoka"
            android:layout_marginStart="@dimens/twenty_dp"
            android:textColor="@color/blue"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimens/twenty_dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimens/sixteen_sp"
            android:layout_marginStart="@dimens/twenty_dp"
            android:fontFamily="@font/fredoka"
            android:text="Item Category:"/>

        <TextView
            android:id="@+id/itemCategory_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimens/sixteen_sp"
            android:fontFamily="@font/fredoka"
            android:layout_marginStart="@dimens/twenty_dp"
            android:textColor="@color/blue"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimens/twenty_dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimens/sixteen_sp"
            android:layout_marginStart="@dimens/twenty_dp"
            android:fontFamily="@font/fredoka"
            android:text="In Case of Non Delivery:"/>

        <TextView
            android:id="@+id/non_delivery_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimens/sixteen_sp"
            android:fontFamily="@font/fredoka"
            android:layout_marginStart="@dimens/twenty_dp"
            android:textColor="@color/blue"
            android:text=""/>

    </LinearLayout>







</LinearLayout>