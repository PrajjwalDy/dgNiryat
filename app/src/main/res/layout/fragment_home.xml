<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainscreen.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimens/hundred_fifty_dp"
                android:scaleType="fitXY"
                android:src="@drawable/carousel" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimens/twenty_dp"
                android:layout_marginTop="-25dp"
                android:layout_marginEnd="@dimens/twenty_dp"
                android:background="@drawable/search_box_bg">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimens/fifty_dp"
                    android:layout_toStartOf="@id/searchIcon"
                    android:backgroundTint="@color/lightred"
                    android:hint="Search with Article No."
                    android:padding="5pt"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="@dimens/thirty_five_dp"
                    android:layout_height="@dimens/thirty_five_dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search"
                    android:visibility="gone" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimens/twenty_dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/invoice"
                    android:layout_width="@dimens/width_zero_dp"
                    android:layout_height="@dimens/hundred_ten_dp"
                    android:layout_margin="@dimens/ten_dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="7pt"
                    app:cardElevation="5pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimens/sixty_dp"
                            android:layout_height="@dimens/sixty_dp"
                            android:layout_margin="@dimens/ten_dp"
                            android:src="@drawable/invoice" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimens/five_dp"
                            android:text="Invoice"
                            android:textAlignment="center"
                            android:textColor="@color/red" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/calculatePostage"
                    android:layout_width="@dimens/width_zero_dp"
                    android:layout_height="@dimens/hundred_ten_dp"
                    android:layout_margin="@dimens/ten_dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="7pt"
                    app:cardElevation="5pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimens/sixty_dp"
                            android:layout_height="@dimens/sixty_dp"
                            android:layout_margin="@dimens/ten_dp"
                            android:src="@drawable/calculator" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimens/five_dp"
                            android:text="Postage"
                            android:textAlignment="center"
                            android:textColor="@color/red" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/available_card"
                    android:layout_width="@dimens/width_zero_dp"
                    android:layout_height="@dimens/hundred_ten_dp"
                    android:layout_margin="@dimens/ten_dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="7pt"
                    app:cardElevation="5pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimens/sixty_dp"
                            android:layout_height="@dimens/sixty_dp"
                            android:layout_margin="@dimens/ten_dp"
                            android:src="@drawable/location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimens/five_dp"
                            android:text="Availability"
                            android:textColor="@color/red" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimens/ten_dp"
                android:text="My Articles"
                android:textColor="@color/red"
                android:textSize="@dimens/eighteen_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/poPending"
                    android:layout_width="@dimens/width_zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimens/ten_dp"
                    android:layout_marginTop="@dimens/ten_dp"
                    android:layout_marginEnd="@dimens/twenty_five_dp"
                    android:layout_marginBottom="@dimens/ten_dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5pt"
                    app:cardElevation="3pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimens/ten_dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="@dimens/fifty_dp"
                            android:layout_margin="@dimens/ten_dp"
                            android:src="@drawable/clock" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PO Pending"
                            android:textSize="@dimens/sixteen_sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/inTransit"
                    android:layout_width="@dimens/width_zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimens/twenty_five_dp"
                    android:layout_marginTop="@dimens/ten_dp"
                    android:layout_marginEnd="@dimens/ten_dp"
                    android:layout_marginBottom="@dimens/ten_dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5pt"
                    app:cardElevation="3pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimens/ten_dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="@dimens/fifty_dp"
                            android:layout_margin="@dimens/ten_dp"
                            android:src="@drawable/delivery" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Transit"
                            android:textSize="@dimens/sixteen_sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/underProcess"
                    android:layout_width="@dimens/width_zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimens/ten_dp"
                    android:layout_marginTop="@dimens/ten_dp"
                    android:layout_marginEnd="@dimens/twenty_five_dp"
                    android:layout_marginBottom="@dimens/ten_dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5pt"
                    app:cardElevation="3pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimens/ten_dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="@dimens/fifty_dp"
                            android:layout_margin="@dimens/ten_dp"
                            android:src="@drawable/under_process" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Under Process"
                            android:textSize="@dimens/sixteen_sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/customs"
                    android:layout_width="@dimens/width_zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimens/twenty_five_dp"
                    android:layout_marginTop="@dimens/ten_dp"
                    android:layout_marginEnd="@dimens/ten_dp"
                    android:layout_marginBottom="@dimens/ten_dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5pt"
                    app:cardElevation="3pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimens/ten_dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="@dimens/fifty_dp"
                            android:layout_margin="@dimens/ten_dp"
                            android:src="@drawable/custom" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customs"
                            android:textSize="@dimens/sixteen_sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/customsCleared"
                    android:layout_width="@dimens/width_zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimens/ten_dp"
                    android:layout_marginTop="@dimens/ten_dp"
                    android:layout_marginEnd="@dimens/twenty_five_dp"
                    android:layout_marginBottom="@dimens/ten_dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5pt"
                    app:cardElevation="3pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimens/ten_dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="@dimens/fifty_dp"
                            android:layout_margin="@dimens/ten_dp"
                            android:src="@drawable/correct" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Custom Cleared"
                            android:textSize="@dimens/sixteen_sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/delivered"
                    android:layout_width="@dimens/width_zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimens/twenty_five_dp"
                    android:layout_marginTop="@dimens/ten_dp"
                    android:layout_marginEnd="@dimens/ten_dp"
                    android:layout_marginBottom="@dimens/ten_dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5pt"
                    app:cardElevation="3pt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimens/ten_dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="@dimens/fifty_dp"
                            android:layout_margin="@dimens/ten_dp"
                            android:src="@drawable/shipped" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivered"
                            android:textSize="@dimens/sixteen_sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bookArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimens/eighteen_dp"
        android:layout_marginTop="@dimens/eighteen_dp"
        android:layout_marginEnd="@dimens/eighteen_dp"
        android:layout_marginBottom="@dimens/eighteen_dp"
        android:backgroundTint="@color/red"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white" />


</RelativeLayout>