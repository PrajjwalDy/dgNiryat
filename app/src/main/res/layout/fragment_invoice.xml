<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.otherscreen.fragments.Invoice.InvoiceFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appBar_text_book_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:fontFamily="@font/fredoka"
                android:text="@string/invoice"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/productCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/default_card_bg"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/orderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:maxLines="1"
                android:text="@string/minerals"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/toCountyLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fredoka"
                android:text="@string/to_japan"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/orderName" />

            <TextView
                android:id="@+id/productType_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fredoka"
                android:text="@string/raw_material"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toCountyLayout" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:text=""
                android:textColor="@color/blue"
                app:layout_constraintEnd_toEndOf="@+id/statusImage"
                app:layout_constraintStart_toStartOf="@+id/statusImage"
                app:layout_constraintTop_toTopOf="@+id/orderName" />

            <ImageView
                android:id="@+id/statusImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/invoice"
                android:contentDescription="@string/staus_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/statusImage"
                app:layout_constraintStart_toStartOf="@+id/statusImage"
                app:layout_constraintTop_toBottomOf="@+id/statusImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/inv_cv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/default_card_bg"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/cv2_orderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:maxLines="1"
                android:text="@string/ornaments"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cv2_toCountyLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fredoka"
                android:text="@string/to_usa"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv2_orderName" />

            <TextView
                android:id="@+id/cv2_productType_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fredoka"
                android:text="@string/raw_material"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv2_toCountyLayout" />

            <TextView
                android:id="@+id/cv2_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:text=""
                android:textColor="@color/blue"
                app:layout_constraintEnd_toEndOf="@+id/cv2_statusImage"
                app:layout_constraintStart_toStartOf="@+id/cv2_statusImage"
                app:layout_constraintTop_toTopOf="@+id/cv2_orderName" />

            <ImageView
                android:id="@+id/cv2_statusImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/invoice"
                android:contentDescription="@string/staus_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv2_textView" />

            <TextView
                android:id="@+id/cv2_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/cv2_statusImage"
                app:layout_constraintStart_toStartOf="@+id/cv2_statusImage"
                app:layout_constraintTop_toBottomOf="@+id/cv2_statusImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/inv_cv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/default_card_bg"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inv_cv2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/cv3_orderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:maxLines="1"
                android:text="@string/gold"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cv3_toCountyLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fredoka"
                android:text="@string/to_england"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv3_orderName" />

            <TextView
                android:id="@+id/cv3_productType_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fredoka"
                android:text="@string/raw_material"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv3_toCountyLayout" />

            <TextView
                android:id="@+id/cv3_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:text=""
                android:textColor="@color/blue"
                app:layout_constraintEnd_toEndOf="@+id/cv3_statusImage"
                app:layout_constraintStart_toStartOf="@+id/cv3_statusImage"
                app:layout_constraintTop_toTopOf="@+id/cv3_orderName" />

            <ImageView
                android:id="@+id/cv3_statusImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/invoice"
                android:contentDescription="@string/staus_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv3_textView" />

            <TextView
                android:id="@+id/cv3_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/cv3_statusImage"
                app:layout_constraintStart_toStartOf="@+id/cv3_statusImage"
                app:layout_constraintTop_toBottomOf="@+id/cv3_statusImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>