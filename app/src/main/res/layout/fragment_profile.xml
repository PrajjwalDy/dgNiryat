<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mainscreen.profile.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimens/fifty_dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/appBar_text_book_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimens/ten_dp"
                android:fontFamily="@font/fredoka"
                android:text="Profile"
                android:textColor="@color/red"
                android:textSize="@dimens/twenty_sp" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimens/ten_dp"
                android:layout_marginTop="@dimens/ten_dp"
                android:layout_marginEnd="@dimens/ten_dp"
                android:layout_marginBottom="@dimens/ten_dp"
                android:fontFamily="@font/fredoka"
                android:text="Logout"
                android:textColor="@color/blue"
                android:textSize="@dimens/twenty_sp" />
        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="@dimens/hundred_dp"
        android:layout_height="@dimens/hundred_dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimens/twenty_dp"
        android:src="@drawable/user"/>

    <TextView
        android:id="@+id/userFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FullName"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimens/eighteen_sp"
        android:layout_marginBottom="@dimens/twenty_dp"
        android:fontFamily="@font/fredoka"
        android:textColor="@color/blue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/email_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_marginStart="@dimens/ten_dp"
        android:textSize="@dimens/sixteen_sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/userMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile No."
        android:layout_marginStart="@dimens/ten_dp"
        android:textSize="@dimens/sixteen_sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/waytobusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Profile"
        android:layout_marginStart="@dimens/ten_dp"
        android:textSize="@dimens/sixteen_sp"
        android:textColor="@color/black"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimens/eighteen_sp"
        android:text="Recent Consignment"
        android:layout_margin="@dimens/twenty_dp"
        android:fontFamily="@font/fredoka"
        android:textColor="@color/blue"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recentConsignmentRV"/>







</LinearLayout>